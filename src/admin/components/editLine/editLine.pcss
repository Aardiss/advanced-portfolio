.edit-line-component {
  &.blocked {
    opacity: 0.5;
    filter: grayscale(100%);
    pointer-events: none;
  }
  
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25px 10px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.15);
  margin: 0 30px;
  
}

.input {
  width: 66%;
}

.buttons {
  display: flex;
}

.button-icon {
  margin-right: 20px;

  &:last-child {
    margin-right: 0;
  }
}
.text {
  color: #414C63;
  font-size: 18px;
}