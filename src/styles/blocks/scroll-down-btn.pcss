.scroll-down-btn {
  background: transparent;
  outline: none;
  color: #fff;
  display: flex;
  margin-top: 32%;
  font-size: 19px;

  &::after {
  content: "";
  display: block;
  background: svg-load('scroll.svg', fill=$text-color,  width=100%, height=100%);
  width: 29px;
  height: 29px;
  margin-left: 8px;
}
  @include desktop {
  margin-top: 19%;
  }
}