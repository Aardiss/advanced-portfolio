.tags {
 font-weight: 600;
 font-size: 13px;
 color: rgba(51, 60, 73, 0.8);
 margin: 10px 0px;
 display: flex;
  
 
}
.tags__item {
  padding-right: 50px;
 display: flex;
 flex-direction: row;
 padding: 14px 22px;
 background: #F3F6F9;
 border-radius: 40px;
 margin-right: 8px;
  @include tablets {
    margin: auto;
  }

  &:hover {
  background: #586ed3;
  color: #F3F6F9;
  transition: 1s;
}
}